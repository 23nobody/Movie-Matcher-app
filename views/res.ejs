<!DOCTYPE html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>movie project</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="decres.css">
		<link href="https://fonts.googleapis.com/css?family=Pacifico|Shadows+Into+Light&display=swap" rel="stylesheet">
		<link href='https://fonts.googleapis.com/css?family=Raleway:200,400,800' rel='stylesheet' type='text/css'>
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    </head>
    <body>
		
		<% if(data.Response=="False"){ %>
  <h1>
	  <%= data.Error%>
  </h1>
  <%}
  else{ %>
	  
     <div class="jumbotron text-center">
       <h1 class="display-4 mb-3"><span id="font">Results matching your search</span></h1>
       <!-- <p class="lead"></p> -->
       <hr class="my-1">
    </div>
		
	<section class="content">
	<div class="container">
        <div class="row">
			  <% for(var i=0;i< data["Search"].length;i++){ %>
           <div class="col-lg-4 mb-3">
              <div class="card card-body h-100">  
               <div>
				   <img class="card-img-top size" src="<%=data.Search[i].Poster%>">
               </div>
                <div class="card-body">
                    <h4 class="card-title">Title :<%=data.Search[i].Title%></h4>
					<h4 class="card-title">Year Release :<%=data.Search[i].Year%></h4>
					<h4 class="card-title">IMDB ID :<%=data.Search[i].imdbID%></h4>
					<h4 class="card-title">Type :<%=data.Search[i].Type%></h4>
                </div>
                </div>
                 </div>
              <%}
              }%>
      </div>
    </div>
	</section>


 <%include partials/footer%>
